<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app">
    <menubar id="menu">
        <menu title="_File">
            <item id="mn_settings">Settings</item>
            <item id="mn_quit" shortcut="Ctrl-Q">_Quit</item>
        </menu>
        <menu title="Help">
            <item id="mn_about" shortcut="Shift-F1">_About...</item>
        </menu>
    </menubar>

    <window id="main" title="Amidon" activate="true" open="False" menubar="menu" width="400" height="300">
        <vgroup>

            <hgroup>
                <image id="img_avatar" brush="1"/>
                <vgroup>
                    <label id="lbl_profile" Align="Left">@long.username</label>
                    <label id="lbl_instance" Align="Left">@long.instance.server.name</label>
                </vgroup>
                <rectangle/>
                <image brush="2"/>
            </hgroup>

            <pageview id="pv_main" mode="List">
                <vgroup title="Publish">

                    <hgroup>
                        <Label id="lbl_reply_to" Align="Left">Reply to:</Label>
                        <rectangle/>
                        <rectangle/>
                        <button id="btn_clear_reply_to" tooltip="Clear">X</button>
                    </hgroup>
                    <TextView id="txt_reply_to" Styled="True"/>
                    <texteditor id="txtedit" hint="What's on your mind?" notify="HasChanged"/>

                    <hgroup>
                        <button id="btn_addmedia" icon="3" tooltip="Add images, a video or an audio file"/>
                        <button id="btn_addpoll" icon="4" tooltip="Add a poll"/>
                        <button id="btn_changeprivacy" icon="5" tooltip="Change post privacy"/>
                    </hgroup>

                    <hgroup>
                        <button id="btn_cw" tooltip="Add content warning">CW</button>
                        <button id="btn_lang" tooltip="Change language">EN</button>
                         <rectangle/>
                        <label id="lbl_chars">500</label>
                    </hgroup>

                    <hgroup>
                        <rectangle/>
                        <rectangle/>
                        <button id="btn_Publish" tooltip="Publish toot">Publish!</button>
                    </hgroup>
                </vgroup>

                <vgroup title="Notifications">
                    <button id="btn_getnotifications" tooltip="Refresh">Refresh</button>
                    <pageview id="pv_notifications">
                        <hgroup title="All">
                            <Listview id="lv_notifications" Alternate="True" HRules="True" notify="Active; DoubleClick">
                                <column title="R" Checkbox="True" Hide="True"/>
                                <column title="F" Checkbox="True" Hide="True"/>
                                <column title="B" Checkbox="True" Hide="True"/>
                                <column title="Content"/>
                                <column title="id" hide="True"/>
                                <column title="type" hide="True"/>
                            </Listview>
                        </hgroup>
                        <hgroup title="Mentions">
                            <Listview id="lv_mentions" Alternate="True" HRules="True" notify="Active; DoubleClick">
                                <column title="R" Checkbox="True" Hide="True"/>
                                <column title="F" Checkbox="True" Hide="True"/>
                                <column title="B" Checkbox="True" Hide="True"/>
                                <column title="Content"/>
                                <column title="id" hide="True"/>
                                <column title="type" hide="True"/>
                            </Listview>
                        </hgroup>
                    </pageview>
                    <hgroup>
                        <button id="btn_reply" icon="6" tooltip="Reply"/>
                        <button id="btn_boost" icon="7" tooltip="Boost" Toggle="True"/>
                        <button id="btn_favourite" icon="8" tooltip="Favorite" Toggle="True"/>
                        <button id="btn_bookmark" icon="9" tooltip="Bookmark" Toggle="True"/>
                        <rectangle/>
                    </hgroup>
                </vgroup>

                <vgroup title="Explore">
                    <button id="btn_gettrending" tooltip="Refresh">Refresh</button>
                    <pageview id="pv_explore">
                        <hgroup title="Posts">
                            <Listview id="lv_posts" Alternate="True" HRules="True" notify="active">
                                <column/>
                                <column hide="True" Width="0"/>
                                <column hide="True" Width="0"/>
                            </Listview>
                        </hgroup>
                        <hgroup title="Hashtags">
                            <Listview id="lv_hashtags" Alternate="True" HRules="True" notify="active">
                                <column/>
                            </Listview>
                        </hgroup>
                        <hgroup title="News">
                            <Listview id="lv_news" Alternate="True" HRules="True" notify="active">
                                <column/>
                            </Listview>
                        </hgroup>
                        <hgroup title="For you">
                            <Listview id="lv_foryou" Alternate="True" HRules="True" notify="active">
                                <column/>
                            </Listview>
                        </hgroup>
                    </pageview>
                </vgroup>

                <vgroup title="Local">
                    <button id="btn_getlocal" tooltip="Refresh">Refresh</button>
                    <Listview id="lv_local" Alternate="True" HRules="True" notify="active">
                        <column/>
                        <column hide="True" Width="0"/>
                        <column hide="True" Width="0"/>
                    </Listview>
                </vgroup>

                <vgroup title="Federated">
                    <button id="btn_getfederated" tooltip="Refresh">Refresh</button>
                    <Listview id="lv_federated" Alternate="True" HRules="True" notify="active">
                        <column/>
                        <column hide="True" Width="0"/>
                        <column hide="True" Width="0"/>
                    </Listview>
                </vgroup>

                <vgroup title="DMs">
                    <button id="btn_getdms" tooltip="Refresh">Refresh</button>
                    <Listview id="lv_dm" Alternate="True" HRules="True" notify="active">
                        <column/>
                        <column hide="True" Width="0"/>
                        <column hide="True" Width="0"/>
                    </Listview>
                </vgroup>

                <vgroup title="Favourites">
                    <button id="btn_getfavourites" tooltip="Refresh">Refresh</button>
                    <Listview id="lv_favourites" Alternate="True" HRules="True" notify="active">
                        <column/>
                        <column hide="True" Width="0"/>
                        <column hide="True" Width="0"/>
                    </Listview>
                </vgroup>

                <vgroup title="Bookmarks">
                    <button id="btn_getbookmarks" tooltip="Refresh">Refresh</button>
                    <Listview id="lv_bookmarks" Alternate="True" HRules="True" notify="active">
                        <column/>
                        <column hide="True" Width="0"/>
                        <column hide="True" Width="0"/>
                    </Listview>
                </vgroup>

                <vgroup title="Lists">
                    <button id="btn_getlists" tooltip="Refresh">Refresh</button>
                    <Listview id="lv_lists" Alternate="True" HRules="True" notify="active">
                        <column/>
                        <column hide="True" Width="0"/>
                        <column hide="True" Width="0"/>
                    </Listview>
                </vgroup>

                <vgroup title="Requests">
                    <button id="btn_getfollowrequests" tooltip="Refresh">Refresh</button>
                    <Listview id="lv_followrequests" Alternate="True" HRules="True" notify="active">
                        <column/>
                        <column hide="True" Width="0"/>
                        <column hide="True" Width="0"/>
                    </Listview>
                </vgroup>

            </pageview>

        </vgroup>
    </window>
</application>